{
    "name": "holo-nonstop-extension",
    "version": "0.0.1",
    "description": "Enjoy Hololive content continuously",
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["script.js"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "storage"
    ],
    "manifest_version": 2
}